# Configurazione Flask
FLASK_ENV=development
SECRET_KEY=your-super-secret-key-here
PORT=8080

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
MODEL=gpt-4o-mini
EMBEDDING_MODEL=text-embedding-ada-002

# RAG Configuration
TOP_K=5
MIN_OVERLAP=0.3
CHUNK_SIZE=500
CHUNK_OVERLAP=50

# Quality Control
ENABLE_ADAPTIVE_QUALITY=true
QUALITY_DEBUG_MODE=false

# Rate Limiting
RATE_LIMIT_OPENAI_USER=30 per hour
RATE_LIMIT_OPENAI_MODEL=20 per hour

# CORS
ALLOWED_ORIGINS=*

# Authentication
ADMIN_USER=admin
ADMIN_PASS=admin_password
REQUIRE_AUTH=false

# OpenAI Usage Limits per GPT-4o-mini
OPENAI_GPT4O_MINI_REQUESTS_PER_HOUR=100
OPENAI_GPT4O_MINI_TOKENS_PER_HOUR=500000
OPENAI_GPT4O_MINI_MAX_TOKENS_PER_REQUEST=4000
ADMIN_TOKEN=vertassistrag3-secret-key-2024-secure
